<% title "Directorio de sitios de guitarra#{params[:page] ? " - Página #{params[:page]}" : ""}" %>
<% meta_description "Directorio de sitios de guitarra en español y artículos para aprender a tocar guitarra." %>

<p>
  <%= link_to "SitiosDeGuitarra.com", root_path %> es un directorio que recoge y califica sitios web dedicados a la guitarra. El directorio incluye sitios tanto de guitarra acústica como eléctrica y temas como ejercicios para ganar velocidad, acordes, tablaturas y cursos completos de este maravilloso instrumento musical.
</p>

<div id="search">
  <%= render :partial => "shared/adsense/search_bar" %>          
</div>

<div class="clear"></div>

<div class="recent_feed_entries">
  <div class="feed_entry">
    <div class="subtitle">Artículos recientes en la blogósfera guitarrera</div>
  </div>
  <% @feed_entries.each_with_index do |feed_entry, i| %>
    <%= div_for(feed_entry) do %>
      <div class="title"><%= link_to feed_entry.title, feed_entry.url, :target => "_blank" %></div>
      <div class="subtitle">Publicado hace <%= time_ago_in_words(feed_entry.published_at) %> en <%= link_to feed_entry.site.title, feed_entry.site %></div>
      <%= feed_entry.truncated_summary.html_safe %>    
    <% end %>
    
    <% if i == 0 %>
      <div class="feed_entry">
        <div class="title">Anuncios</div><div class="subtitle"></div>
        <%= adsense_wrapper(:banner) do %>
          <script type="text/javascript"><!--
          google_ad_client = "ca-pub-4711309222734567";
          /* Banner */
          google_ad_slot = "0036061737";
          google_ad_width = 468;
          google_ad_height = 60;
          //-->
          </script>
          <script type="text/javascript"
          src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
          </script>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>


<% @sites.each_with_index do |site, i| %>
  <%= render :layout => site do %>
    <%= textilize(site.review, link_to("Leer más sobre #{site.title}...", site)).html_safe %>
  <% end %>
  
  <%= adsense_wrapper do %>
    <script type="text/javascript"><!--
    google_ad_client = "ca-pub-4711309222734567";
    /* Leaderboard (728 x 90) */
    google_ad_slot = "7424772588";
    google_ad_width = 728;
    google_ad_height = 90;
    //-->
    </script>
    <script type="text/javascript"
    src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
    </script>
  <% end %>
<% end %>

<div style="padding-top: 5px">
  <%= link_to 'Ver todos los sitios →', sites_path %>
</div>
