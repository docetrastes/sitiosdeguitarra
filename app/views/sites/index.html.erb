<% title "Directorio de sitios de guitarra#{params[:page] ? " - Página #{params[:page]}" : ""}" %>
<% meta_description "Directorio de sitios de guitarra en español y artículos para aprender a tocar guitarra." %>


<% for site in @sites %>
  <%= div_for(site) do %>
    <div class="thumbnail"><%= thumbshot_tag(site) %></div>
    <div class="content">
      <h2><%= link_to site.title, site %></h2>    
      <% if admin? %>
        <%= link_to "Editar", edit_site_path(site) %> | 
        <%= link_to "Suprimir", site_path(site), :method => :delete, :confirm => "¿Estás seguro?" %>
      <% end %>
      <div class="url"><%= host_from_url(site.url) %></div>
      <div class="tags">
        <% for tag in site.tags %>
          <span class="tag"><%= link_to tag.name, tag %></span>
        <% end %>
      </div>      
      <div class="review"><%= site.review.html_safe %></div>
    </div>
  <% end %>
  <div class="clear"></div>
<% end %>

<%= render :partial => "pagination" %>

<% if admin? %>
  <p><%= link_to "Nuevo Sito", new_site_path(site) %></p>
<% end %>
